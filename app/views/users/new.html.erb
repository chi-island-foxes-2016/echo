<div class="register">
<br>
<%= link_to image_tag('logo.png', size: "100x60"), root_path%>
<h5> Welcome to Echo</h5>
<%= form_for(@user) do |f| %>
      <div class="row">
        <div class="input-field col s6">
          <%= f.text_field :first_name %>
          <%= f.label :first_name, 'First Name' %>
        </div>
        <div class="input-field col s6">
          <%= f.text_field :last_name %>
          <%= f.label :last_name, 'Last Name' %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <%= f.email_field :email %>
          <%= f.label :email, 'Email' %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
          <%= f.text_field :username %>
          <%= f.label :username, 'Username' %>
        </div>
        <div class="input-field col s6">
          <%= f.password_field :password %>
          <%= f.label :password, 'Password' %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
          <%= f.text_field :city %>
          <%= f.label :city, 'City' %>
        </div>
        <div class="input-field col s6">
          <div class="input-field col s12">
          <%= f.collection_select :state, State.all, :id, :name, {prompt: "Choose a State"}, :class => "browser-default" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
          <%= f.file_field :avatar %>
        </div>
      </div>
          <% if flash[:error] %>
          <% flash[:error].each do |error| %>
            <p class="notice red-text text-accent-4"><%= error %></p>
         <% end %>
         <% end %>
     <%= f.submit :class => "btn waves-effect waves-light" %>

<% end %>
</div>
