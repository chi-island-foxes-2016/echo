<div class="register">
<br>
<%= link_to image_tag('logo.png', size: "100x60"), root_path%>
<h5> Welcome to Echo</h5>
<%= form_for(@user) do |f| %>
    <form class="col s12">
      <div class="row">
        <div class="input-field col s6">
          <%= f.text_field :first_name %>
          <label for="last_name">First Name</label>
        </div>
        <div class="input-field col s6">
          <%= f.text_field :last_name %>
          <label for="last_name">Last Name</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <%= f.email_field :email %>
          <label for="email">Email</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
          <%= f.text_field :username %>
          <label for="last_name">Username</label>
        </div>
        <div class="input-field col s6">
          <%= f.password_field :password %>
          <label for="password">Password</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
          <%= f.text_field :city %>
          <label for="email">City</label>
        </div>
        <div class="input-field col s6">
          <div class="input-field col s12">
          <%= f.collection_select :state, State.all, :id, :name, {prompt: "Choose a State"}, :class => "browser-default" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
          <%= f.file_field :avatar %>
        </div>
      </div>
          <% if flash[:error] %>
          <% flash[:error].each do |error| %>
            <p class="notice red-text text-accent-4"><%= error %></p>
         <% end %>
         <% end %>
     <%= f.submit :class => "btn waves-effect waves-light" %>
    </form>
<% end %>
</div>